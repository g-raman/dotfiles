[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[core]
  editor = nvim
  preloadindex = true
  pager = delta --hunk-header-style "none" 

[status]
  branch = true
  short = true
  showStash = true
  showUntrackedFiles = all

[log]
  abbrevCommit = true
  graphColors  = blue,yellow,cyan,magenta,green,red


[init]
  defaultBranch = main

[push]
  autoSetupRemote = true

[diff]
  context = 3
  renames = copies
  interHunkContext = 10

[interactive]
  diffFilter = delta --color-only
  singleKey = true

[delta]
  line-numbers = false

[branch]
  sort = -committerdate

[tag]
  sort = -taggerdate

[merge]
  conflictstyle = zdiff3

[color.branch]
  current  = magenta
  local    = default
  remote   = yellow
  upstream = green
  plain    = blue

[color.decorate]
  HEAD = red
  branch = blue
  tag = yellow
  remoteBranch = magenta

[color.blame]
  highlightRecent = black bold,1 year ago,white,1 month ago,default,7 days ago,blue

[url "git@github.com:"]
  insteadOf = "gh:"

[url "git@github.com:g-raman/"]
  insteadOf = "raman:"

[include]
  path = ~/.gitconfig.local

