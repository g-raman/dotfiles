[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[core]
  editor = nvim
  preloadindex = true
  pager = diff-so-fancy | less --tabs=4 -RFX

[status]
  branch = true
  short = true
  showStash = true
  showUntrackedFiles = all

[log]
  abbrevCommit = true
  graphColors  = blue,yellow,cyan,magenta,green,red

[color]
  ui = auto

[color.diff]
  meta       = black bold
  frag       = magenta
  context    = white
  whitespace = yellow reverse
  old        = red

[init]
  defaultBranch = main

[push]
  autoSetupRemote = true

[diff]
  context = 3
  renames = copies
  interHunkContext = 10

[interactive]
  diffFilter = diff-so-fancy --patch

[diff-so-fancy]
  markEmptyLines = false

[branch]
  sort = -committerdate

[tag]
  sort = -taggerdate

[merge]
  conflictstyle = zdiff3

[url "git@github.com:"]
  insteadOf = "gh:"

[url "git@github.com:g-raman/"]
  insteadOf = "raman:"

[include]
  path = ~/.gitconfig.local

